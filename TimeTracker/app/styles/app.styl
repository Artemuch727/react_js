.content
  font-family "RobotoRegular", sans-serif

.timerBox
	position relative
	visibility hidden
	&--vis
	  visibility visible
	  position relative
	&__timer
	  border 16px solid #f3f3f3 /* Light grey */
	  border-top 16px solid #3498db /* Blue */
	  border-radius 50%
	  width 120px
	  height 120px
	  animation spin 2s linear infinite
	  position relative
	  &--value
		  position absolute
		  top 45%
		  left 25%

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}
