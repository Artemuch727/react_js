//*************************************
.inputBox
  padding  10px
  width  25%
  height  50px
  &__label
	  position  absolute
	  line-height  22px
	  top  38px
	  transition  all 450ms cubic-bezier(0.23, 1, 0.32, 1) 0ms
	  z-index  1
	  cursor  text
	  transform  scale(1) translate3d(100%, 0px, 0px)
	  transform-origin  left top 0
	  pointer-events  none
	  color  rgba(0, 0, 0, 0)
	  &--up
		  position  absolute
		  line-height  22px
		  top  38px
		  transition  all 450ms cubic-bezier(0.23, 1, 0.32, 1) 0ms
		  z-index  1
		  cursor  text
		  transform  perspective(12px) scale(0.75) translate3d(0px, -25px, 0px)
		  transform-origin  left top 0
		  pointer-events  none
		  color  rgb(0, 188, 212)
		  -webkit-user-select  none
  &__input
	  text-align  left
	  -webkit-tap-highlight-color  rgba(0, 0, 0, 0)
	  padding-left  10px
	  position  relative
	  width  100%
	  border  none
	  outline  none
	  color  rgba(0, 0, 0, 0.870588)
	  height  100%
	  box-sizing  border-box
	  background-color  rgba(0, 0, 0, 0)
  &__hr
	  border-top  none rgb(224, 224, 224)
	  border-right  none rgb(224, 224, 224)
	  border-bottom  1px solid rgb(224, 224, 224)
	  border-left  none rgb(224, 224, 224)
	  bottom  8px
	  box-sizing  content-box
	  margin  0
	  width  100%
	  &--def
		  border-top  none rgb(0, 188, 212)
		  border-right  none rgb(0, 188, 212)
		  border-bottom  2px solid rgb(0, 188, 212)
		  border-left  none rgb(0, 188, 212)
		  bottom  8px
		  box-sizing  content-box
		  margin  0
		  width  100%
		  transform  scaleX(0)
		  transition  all 450ms cubic-bezier(0.23, 1, 0.32, 1) 0ms
	  &--input
		  border-top  none rgb(0, 188, 212)
		  border-right  none rgb(0, 188, 212)
		  border-bottom  2px solid rgb(0, 188, 212)
		  border-left  none rgb(0, 188, 212)
		  bottom  8px
		  box-sizing  content-box
		  margin  0
		  width  100%
		  transform  scaleX(1)
		  transition  all 450ms cubic-bezier(0.23, 1, 0.32, 1) 0ms
	  &--err
		  border-top  none rgb(244, 67, 54)
		  border-right  none rgb(244, 67, 54)
		  border-bottom  2px solid rgb(244, 67, 54)
		  border-left  none rgb(244, 67, 54)
		  bottom  8px
		  box-sizing  content-box
		  margin  0
		  width  100%
		  transform  scaleX(1)
		  transition  all 450ms cubic-bezier(0.23, 1, 0.32, 1) 0ms
