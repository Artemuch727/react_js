.dropdownList
  height 100%
  margin-top  auto
  list-style-type  none
  padding-left  2px
  margin-right  -150px
  width  100%
  display  none
  opacity 0
  outline  1px #e4e4e4 solid
  overflow-y  scroll
  background-color white
  transition  all 950ms cubic-bezier(0.23, 1, 0.32, 1) 0ms
  &--animate
	  display  block
	  margin-right  0
	  opacity  1
	  transition  all 950ms cubic-bezier(0.23, 1, 0.32, 1) 0ms
  &__item
	  width  100%
	  height  40px
	  background  white
	  text-align  left
	  padding-left  15px
	  padding-top  13px
	  &--active
		  width  100%
		  height  40px
		  background  #e4e4e4
		  text-align  left
		  padding-left  15px
		  padding-top  13px
  &__item:hover
	  background  #e4e4e4
