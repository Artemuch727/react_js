.errorDiv
  position  absolute
  width  60%
  height  100px
  padding  25px
  text-align  center
  top  10px
  left 45%
  margin-left -25%
  margin-top  -150px
  display  flex
  flex-direction  row
  justify-content  center
  align-items  center
  background-color  white
  color  #f00
  font-size  16px
  font-weight  bold
  z-index  1
  box-shadow  0px 0px 21px -2px rgba(0,0,0,0.75)
  transition  all 950ms cubic-bezier(0.23, 1, 0.32, 1) 0ms
  visibility  hidden
  &--show
	  margin-top  5px
	  visibility  visible
	  z-index  9999
	  transition  all 950ms cubic-bezier(0.23, 1, 0.32, 1) 0ms
