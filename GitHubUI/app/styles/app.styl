///************ header ************/
.errorDiv
  position  absolute
  width  60%
  height  100px
  padding  25px
  text-align  center
  top  10px
  left 45%
  margin-left -25%
  margin-top  -150px
  display  flex
  flex-direction  row
  justify-content  center
  align-items  center
  background-color  white
  color  #f00
  font-size  16px
  font-weight  bold
  z-index  1
  box-shadow  0px 0px 21px -2px rgba(0,0,0,0.75)
  transition  all 950ms cubic-bezier(0.23, 1, 0.32, 1) 0ms
  visibility  hidden
  &--show
    margin-top  5px
    visibility  visible
    z-index  9999
    transition  all 950ms cubic-bezier(0.23, 1, 0.32, 1) 0ms

.userInfoBox
  z-index 1000
  position fixed
  top 0px
  background-color rgba(255,255,255,0)
  padding 10px
  width 100%
  height 90px
  display flex
  align-items center
  justify-content center
  &--solid
    background-image  linear-gradient(180deg, rgba(255,255,255,0) 60%, #fff), linear-gradient(70deg, #abafb0 32%, #abafb0)
  &__inputBox
    padding  10px
    width  25%
    height  50px


